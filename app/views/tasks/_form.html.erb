  <%= form_with(model: task, local: true) do |form| %>
  <div class="">
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>

    <div class="field">
      <%= form.label :limit %>
      <%= form.date_field :limit %>
    </div>

    <div class="field">
      <%= form.label :status%>
      <%= form.select :status, Task.statuses.keys %>
      <%#= form.select :status,[["未着手","未着手"],["着手中","着手中"],["完了","完了"]],include_blank: "今の状態は？"%>
  <%#"未着手"で受け取った値を"未着手"に変換するという意味。それが着手中、完了にも適応されている %>
    </div>

    <div class="field">
      <% form.label :priority%>
      <%= form.select :priority, Task.priorities.keys%>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
